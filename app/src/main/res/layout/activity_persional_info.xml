<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#24CE5E"
        >
        <ImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back_normal"
            android:id="@+id/activity_persional_info_cancel"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资料"
            android:textColor="#fff"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="名字"
            android:textColor="#cdcdcd"
            />
        <ImageView
            android:id="@+id/activity_persional_info_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            />
        <TextView
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/activity_persional_info_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_persional_info_name_text"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#F9F9F9"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="性别"
            android:textColor="#cdcdcd"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            android:id="@+id/activity_persional_info_sex"
            />
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_persional_info_sex"
            android:layout_centerInParent="true"
            android:text="女"
            android:id="@+id/activity_persional_info_sex_text"
            android:padding="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cdcd"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="身高"
            android:textColor="#cdcdcd"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            android:id="@+id/activity_persional_info_height"
            />
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_persional_info_height"
            android:layout_centerInParent="true"
            android:text="女"
            android:id="@+id/activity_persional_info_height_text"
            android:padding="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cdcd"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="体重"
            android:textColor="#cdcdcd"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            android:id="@+id/activity_persional_info_weight"
            />
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_persional_info_weight"
            android:layout_centerInParent="true"
            android:text="女"
            android:id="@+id/activity_persional_info_weight_text"
            android:padding="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cdcd"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="生日"
            android:textColor="#cdcdcd"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            android:id="@+id/activity_persional_info_birthday"
            />
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_persional_info_birthday"
            android:layout_centerInParent="true"
            android:text="女"
            android:id="@+id/activity_persional_info_birthday_text"
            android:padding="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cdcd"
        />



</LinearLayout>