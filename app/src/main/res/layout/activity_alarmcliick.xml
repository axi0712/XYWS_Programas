<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarmcliick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.xyws_program.view.fragment.blood.childactivity.AlarmcliickItemActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/information_toolbar"
        android:background="@color/colorGreen"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_img"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:id="@+id/alarmclock_toolbar_backimg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编辑提醒"
                android:textSize="20dp"
                android:textColor="@color/colorlightwhite"
                android:gravity="center"
                />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/alarmclockstorage"
              android:text="储存"
              android:layout_alignParentRight="true"
              android:textColor="@color/colorlightwhite"
              android:textSize="20dp"
              />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/alarmclock_lin2"
         android:layout_below="@id/information_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提醒已开启"
            android:textSize="18dp"
            android:textColor="#999999"
            android:layout_marginLeft="30dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:id="@+id/alarmclock_lin11"
        android:layout_below="@id/alarmclock_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/alarmclock_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18dp"
        android:text="设置时间"
        android:textColor="@color/doctor_black"
        />

    </LinearLayout>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_below="@id/alarmclock_lin11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="提醒详情"
        android:textColor="@color/doctor_black"
        android:id="@+id/alarmclock_title"
        />
<RelativeLayout
    android:id="@+id/alarmclock_lin3"
        android:layout_below="@id/alarmclock_title"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alarmclock_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="药品名称："
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/alarmclock_et1"
            android:hint="请填写药品名称！"
            android:layout_toRightOf="@id/alarmclock_tv"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/alarmclock_lin4"
        android:layout_below="@id/alarmclock_lin3"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alarmclock_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="服用剂量："
            />
        <EditText
            android:numeric="integer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/alarmclock_et2"
            android:hint="请填写服用剂量(ml)！"
            android:layout_toRightOf="@id/alarmclock_tv2"
            />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>
