<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#24CE5E"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back_normal"
        android:id="@+id/activity_persional_setting_zhanghu_cancel"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="账户"
        android:textColor="#fff"
        android:textSize="18sp"
        />
</RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_setting_zhanghu_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号码"
            android:textColor="#696868"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            android:id="@+id/activity_persional_info_sex"
            />
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_persional_info_sex"
            android:layout_centerInParent="true"
            android:text="女"
            android:id="@+id/activity_persional_setting_zhanghu_phone_text"
            android:padding="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#dfdcdc"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/activity_persional_setting_zhanghu_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="密码"
            android:textColor="#696868"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_diary_forward"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#e6e3e3"
        />
    <Button
        android:id="@+id/activity_persional_setting_zhanghu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:background="#ef2e2e"
        android:textColor="#fff"
        />
</LinearLayout>