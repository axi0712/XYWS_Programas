<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_persional_tou_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAAAAA"
        android:visibility="visible">

        <TextView
            android:id="@+id/fragment_persional_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="您还没有登录哦~"
            android:textColor="#fff" />

        <Button
            android:id="@+id/fragment_persional_btn_login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/fragment_persional_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:background="@drawable/persional_login"
            android:text="马上登录" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_persional_tou"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#AAAAAA"
        android:visibility="gone">

        <ImageView
            android:id="@+id/fragment_persional_tou_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/fragment_persional_tou_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_persional_tou_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="用户名"
            android:textColor="#666565" />


    </RelativeLayout>

    <Button
        android:id="@+id/persional_btn_jiahao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_persional_tou_rela"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:drawableLeft="@drawable/jiahao"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_diary_forward"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="我的加号" />

    <TextView
        android:id="@+id/persional_tou_jiahao_text"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/persional_btn_jiahao"
        android:background="#d1d0d0" />

    <Button
        android:id="@+id/persional_btn_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/persional_tou_jiahao_text"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:drawableLeft="@drawable/collectasas"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_diary_forward"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="我的收藏" />

    <TextView
        android:id="@+id/persional_btn_collect_text"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/persional_btn_collect"
        android:background="#F9F9F9" />

    <Button
        android:id="@+id/persional_btn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/persional_btn_collect_text"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:drawableLeft="@drawable/info"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_diary_forward"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="个人资料" />

    <TextView
        android:id="@+id/persional_btn_info_text"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/persional_btn_info"
        android:background="#F9F9F9" />

    <Button
        android:id="@+id/persional_btn_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/persional_btn_info_text"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:drawableLeft="@drawable/message"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_diary_forward"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="消息" />

    <TextView
        android:id="@+id/persional_btn_message_text"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/persional_btn_message"
        android:background="#d1d0d0" />

    <Button
        android:id="@+id/persional_btn_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/persional_btn_message_text"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:drawableLeft="@drawable/setting"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_diary_forward"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="设置" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@id/persional_btn_Setting"
        android:background="#F9F9F9" />

</RelativeLayout>